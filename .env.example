# =============================================================================
# ALFRED ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control - it contains secrets!
#
# To set up:
# 1. cp .env.example .env
# 2. cp .env.example apps/web/.env.local
# 3. Fill in all values below
# =============================================================================

# =============================================================================
# DATABASE (Supabase PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST]:6543/postgres
DB_MAX_CONNECTIONS=10
DB_SSL=true

# =============================================================================
# LLM - Anthropic (Primary)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# =============================================================================
# LLM - OpenAI (Whisper, fallback)
# =============================================================================
OPENAI_API_KEY=sk-proj-xxxxx

# =============================================================================
# LLM - Groq (Fast inference)
# =============================================================================
GROQ_API_KEY=gsk_xxxxx

# =============================================================================
# VOICE & AUDIO
# =============================================================================
ELEVENLABS_API_KEY=sk_xxxxx
VOICE_ENGINE_ENABLED=true

# =============================================================================
# IMAGE GENERATION
# =============================================================================
STABILITY_API_KEY=sk-xxxxx
REPLICATE_API_TOKEN=r8_xxxxx
INSTANTID_API_KEY=SG_xxxxx
IP_ADAPTER_ENABLED=true

# =============================================================================
# VIDEO GENERATION (RunPod GPU)
# =============================================================================
RUNPOD_API_KEY=rpa_xxxxx
RUNPOD_ENDPOINT_ID=xxxxx
RUNPOD_VIDEO_ENDPOINT_ID=xxxxx
SADTALKER_API_KEY=xxxxx
SADTALKER_ENABLED=true

# =============================================================================
# EMBEDDINGS
# =============================================================================
VOYAGE_API_KEY=pa-xxxxx

# =============================================================================
# AUTHENTICATION (NextAuth)
# =============================================================================
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3005

# Google OAuth
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxx

# =============================================================================
# PAYMENTS (Stripe)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# =============================================================================
# FILE STORAGE (Vercel Blob)
# =============================================================================
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxx

# =============================================================================
# DEPLOYMENT (Vercel)
# =============================================================================
VERCEL_TOKEN=xxxxx
VERCEL_TEAM_ID=xxxxx

# =============================================================================
# EMAIL (Resend)
# =============================================================================
RESEND_API_KEY=re_xxxxx
EMAIL_FROM=onboarding@resend.dev

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
BROWSERLESS_API_KEY=xxxxx
MEMORY_ENGINE_ENABLED=true

# =============================================================================
# OBSERVABILITY (Sentry)
# =============================================================================
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
SENTRY_ORG=your-org
SENTRY_PROJECT=alfred-web
SENTRY_AUTH_TOKEN=sntrys_xxxxx

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3005
LOG_LEVEL=debug
DEMO_MODE=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_DAY=100000
