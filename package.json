{
  "name": "alfred",
  "version": "0.1.0",
  "private": true,
  "description": "Alfred â€” opinionated AI product architecture platform",
  "author": "Daniel Wahnich",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -r --if-present build",
    "build:packages": "pnpm -r --filter ./packages/* build",
    "lint": "pnpm -r --if-present lint",
    "test": "pnpm -r --if-present test",
    "typecheck": "pnpm -r --if-present typecheck",
    "clean": "pnpm -r --if-present clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "@types/uuid": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "postgres": "^3.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "*.{ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{env,env.*}": [
      "echo 'WARNING: Environment files should not be committed!' && exit 1"
    ]
  }
}
